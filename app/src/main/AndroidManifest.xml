<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adote">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Adote">
        <activity android:name=".ui.showpet.ShowPetDetailsActivity" />
        <activity android:name=".ui.profile.ConfiguracoesActivity" />
        <activity android:name=".ui.addpet.AddPetActivity" />
        <activity android:name=".ui.login.GetUserInfoActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.login.SignupActivity" />
        <activity android:name=".ui.login.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>