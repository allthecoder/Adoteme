<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.login.PrivateInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
                <EditText
                    android:id="@+id/privNameEditTxt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Nome"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/privPhoneEditTxt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Telefone"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/privAddressEditTxt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Endereço"
                    android:inputType="textPostalAddress" />

                <EditText
                    android:id="@+id/privBirthdayEditTxt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Aniversário"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/privNicknameTxt"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Apelido"
                    android:inputType="textPersonName" />
            </LinearLayout>
    </ScrollView>

</LinearLayout>