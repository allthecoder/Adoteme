<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.showpet.ShowPredifinedInfoFragment">

    <TextView
        android:textSize="16dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Porte" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/showSizeChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:chipSpacingHorizontal="20dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/showSmallChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                android:text="Pequeno"
                style="@style/Widget.MaterialComponents.Chip.Choice"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/showMediumChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médio"
                android:checkable="false"
                style="@style/Widget.MaterialComponents.Chip.Choice" />


            <com.google.android.material.chip.Chip
                android:id="@+id/showBigChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grande"
                android:checkable="false"
                style="@style/Widget.MaterialComponents.Chip.Choice" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:id="@+id/userContactTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="Sexo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.chip.ChipGroup
            app:selectionRequired="true"
            android:clickable="false"
            android:id="@+id/showGenderChipGroup"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/userContactTextView">

            <com.google.android.material.chip.Chip
                android:id="@+id/showMaleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Macho" />

            <com.google.android.material.chip.Chip
                android:id="@+id/showFemaleChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="false"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:text="Fêmea" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sociavel com"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.chip.ChipGroup
            app:selectionRequired="true"
            android:id="@+id/showSociabilitiesChipGroup"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:chipSpacingHorizontal="20dp">

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showStrangersChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estranhos"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showDogsChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cachorros"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showCatsChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gatos"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showOtherAnimalsChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outros Animais"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showKidsChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crianças"
                style="@style/Widget.MaterialComponents.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personalidade"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.chip.ChipGroup
            app:selectionRequired="true"
            android:id="@+id/showTemperChipGroup"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:chipSpacingHorizontal="20dp">

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showAgressiveChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agressivo" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showNeutralChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Neutro" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showCalmChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passivo" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showPlayfulChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brincalhão" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showShyChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tímido" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showSociableChip"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>

    <TextView
        android:textSize="16dp"
        android:id="@+id/userNicknameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saúde"
        android:layout_marginVertical="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/showHealtChipGroup"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            app:selectionRequired="true"
            app:chipSpacingHorizontal="20dp">

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showVaccinetedChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacinado"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showFoodRestrictionChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restrição Alimentar"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showHealthyChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saudável"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:checkable="false"
                android:id="@+id/showIndisposedChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indisposto"
                style="@style/Widget.MaterialComponents.Chip.Filter" />
        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>


</LinearLayout>